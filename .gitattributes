# Normalize line endings
* text=auto

# Force LF line endings for code
*.cs     text eol=lf diff=csharp
*.csx    text eol=lf diff=csharp
*.fs     text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf
*.json   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.xml    text eol=lf
*.props  text eol=lf merge=union
*.targets text eol=lf merge=union
*.csproj text eol=lf merge=union
*.fsproj text eol=lf merge=union
*.vbproj text eol=lf merge=union
*.sln    text eol=lf

# Treat common binary formats as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.zip binary
*.dll binary
*.exe binary
*.pdb binary

# Improve diffs
*.md  text
*.sql text

# Keep generated code recognized
*.Designer.cs text eol=lf
